# Application Configuration
APP_NAME="Financial Health Assessment Platform"
DEBUG=True

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL="sqlite:///./financial_health.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/financial_health"

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY="your-secret-key-change-in-production-min-32-chars"
# ENCRYPTION_KEY will be auto-generated if not provided

# OpenAI API Key (Required for AI features)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"

# File Upload Settings
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR="./uploads"

# Multilingual Settings
DEFAULT_LANGUAGE="en"
